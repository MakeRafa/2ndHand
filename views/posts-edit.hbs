<div class="row d-flex justify-content-center">
    <div class="col-sm-4 col-sm-offset-4">
        <form method="POST" action="/posts/{{post._id}}?_method=PUT">
            <legend>Edit Post</legend>
            <div class="form-group">
                <label for="post-title">Title</label>
                <input type="text" name="title" class="form-control" id="post-title" value="{{post.title}}" />

                <label for="post-price">Price</label>
                <input type="text" name="price" class="form-control" id="post-price" value="{{post.price}}" />

                <label for="post-size">Size</label>
                <input type="text" name="size" class="form-control" id="post-size" value="{{post.size}}" />

                <label for="post-description">Description</label>
                <input type="text" name="description" class="form-control" id="post-description" value="{{post.description}}"/>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Update Post</button>
            </div>
        </form>
    </div>
</div>
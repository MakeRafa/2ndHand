<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form action="/posts/new" method="post">
            <legend>New Post</legend>
            <div class="form-group">
                <label for="post-title">Title</label>
                <input
                    type="text"
                    name="title"
                    class="form-control"
                    id="post-title"
                    placeholder="Title"
                    />
                <label for="post-price">Price</label>
                <input
                    type="text"
                    name="price"
                    class="form-control"
                    id="post-price"
                    placeholder="Price"
                    />
                <label for="post-size">Size</label>
                <input
                    type="text"
                    name="size"
                    class="form-control"
                    id="post-size"
                    placeholder="Size"
                    />
                <label for="post-picture">Picture</label>
                {{!-- <input
                    type="file"
                    name="picture"
                    class="form-control"
                    id="post-picture"
                    placeholder="Picture"
                    /> --}}
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Create Post</button>
            </div>
        </form>
    </div>
</div>
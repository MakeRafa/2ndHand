{{#if user}}
<div class="container d-flex justify-content-center">

    <h1>Welcome to your profile, {{user.username}}</h1>
</div>
    <h2 class="p-5">Your Posts:</h2>
{{!-- {{#each user.posts}} --}}
<div class="posts">
    <div class="container col-lg">
        <div class="row col-lg">
            {{#each user.posts}}
            <div class="col-lg-4 p-3">
                <div class="card h-100">

                    {{!-- <img src="{{this.image}}" class="card-img-top" alt="..."> --}}
                    <img class="card-img-top" src="{{user.post.image}}" alt="image of clothing">
                    <div class="card-body">
                        <h5 class="title d-flex justify-content-center" href="/posts/{{this._id}}">{{user.post.title}}
                        </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Description: {{user.post.description}}</li>

                        <li class="list-group-item">Price: ${{user.post.price}}</li>

                        {{!-- <li class="list-group-item">Seller: {{this.creator.username}}</li> --}}
                    </ul>

                    {{!-- <div class="card-body d-flex justify-content-around">
                        <a href="/posts/{{this._id}}" class="btn btn-info">Open</a>
                        {{#if currentUser}}
                        <a href="/" class="btn btn-success">Add to Hand</a>
                        {{/if}}
                    </div> --}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{!-- {{/each}} --}}


    {{else}}

    <a class="btn btn-success" href="/login">Log In</a>

    {{/if}}